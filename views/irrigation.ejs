                                // Calculate progress (assuming 24-hour cycle)
                                const totalTime = 24 * 60 * 60 * 1000; // 24 hours in milliseconds
                                const timeUntilNext = nextSchedule.nextOccurrence - now;
                                const progress = ((totalTime - timeUntilNext) / totalTime) * 100;
                                
