    // Function to get status badge class
    function getStatusBadgeClass(status) {
        switch (status.toLowerCase()) {
            case 'completed':
                return 'badge-success';
            case 'in_progress':
                return 'badge-warning';
            case 'stopped':
                return 'badge-danger';
            default:
                return 'badge-secondary';
        }
    }

    // Function to create a table row from record data
    function createTableRow(record) {
        const row = document.createElement('tr');
        row.id = `irrigation-record-${record.id}`;
        
        // Determine irrigation type from note
        let irrigationType = 'Unknown';
        if (record.note) {
            if (record.note.toLowerCase().includes('automated')) {
                irrigationType = 'Automation';
            } else if (record.note.toLowerCase().includes('manual')) {
                irrigationType = 'Manual';
            } else if (record.note.toLowerCase().includes('scheduled')) {
                irrigationType = 'Schedule';
            }
        }
        
        row.innerHTML = `
            <td>${formatDateTime(record.startTime)}</td>
            <td>${record.duration} min</td>
            <td>${record.moistureBefore}%</td>
            <td>${record.moistureAfter || '--'}%</td>
            <td>${irrigationType}</td>
            <td><span class="badge ${getStatusBadgeClass(record.status)}">${record.status}</span></td>
        `;
        return row;
    }

    // Function to update or add a record in the table
    function updateIrrigationRecord(record) {
        const existingRow = document.getElementById(`irrigation-record-${record.id}`);
        const newRow = createTableRow(record);
        
        if (existingRow) {
            // Update existing row
            existingRow.replaceWith(newRow);
        } else {
            // Add new row at the top of the table
            const tbody = document.getElementById('irrigationHistoryBody');
            if (tbody.firstChild) {
                tbody.insertBefore(newRow, tbody.firstChild);
            } else {
                tbody.appendChild(newRow);
            }
            
            // If we have more than 10 rows, remove the last one
            if (tbody.children.length > 10) {
                tbody.removeChild(tbody.lastChild);
            }
        }
    }

