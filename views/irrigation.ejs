                // Disable next button if on last page
                nextBtn.classList.toggle('disabled', data.pagination.currentPage === data.pagination.totalPages);
                nextBtn.querySelector('a').onclick = (e) => {
                    e.preventDefault();
                    if (data.pagination.currentPage < data.pagination.totalPages) {
                        loadIrrigationHistory(data.pagination.currentPage + 1);
