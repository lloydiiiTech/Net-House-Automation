                                        <div class="time-label" id="nextIrrigationDate">Loading...</div>
                                        <div class="progress mt-3">
                                            <div class="progress-bar bg-primary" role="progressbar" id="nextIrrigationProgress" style="width: 0%"></div>
                                        </div>
                                        <div class="mt-2">
                                            <small class="text-muted" id="nextIrrigationStatus">Calculating next irrigation...</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Quick Controls -->
                            <div class="ibox">
                                <div class="ibox-head">
                                    <div class="ibox-title">Irrigation Controls</div>
                                </div>
                                <div class="ibox-body">
                                    <div class="irrigation-controls">
                                        <!-- Automation Mode Switch -->
                                        <div class="mode-switch">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-robot mr-2"></i>
                                                    <span class="mode-label">Automation Mode</span>
                                                </div>
                                                <div class="switch">
                                                    <input type="checkbox" id="autoModeSwitch" checked>
                                                    <label for="autoModeSwitch"></label>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Duration Control -->
                                        <div class="duration-control">
                                            <label>
                                                <i class="fas fa-hourglass-half mr-2"></i>
                                                Manual Duration
                                            </label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" id="durationInput" min="1" max="60" value="15">
                                                <div class="input-group-append">
                                                    <span class="input-group-text">minutes</span>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Action Buttons -->
                                        <div class="action-buttons">
                                            <button class="action-button start" id="startButton" onclick="startManualIrrigation()" data-toggle="tooltip" data-placement="top" title="Start manual irrigation">
                                                <i class="fas fa-play"></i>
                                                Start Irrigation
                                            </button>
                                            <button class="action-button stop" id="stopButton" onclick="stopIrrigation()" data-toggle="tooltip" data-placement="top" title="Stop current irrigation">
                                                <i class="fas fa-stop"></i>
                                                Stop Irrigation
                                            </button>
                                        </div>

                                        <!-- Status Indicator -->
                                        <div id="irrigationAlert" class="status-indicator" style="display: none;">
                                            <i class="fas fa-info-circle"></i>
                                            <span id="alertMessage"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Irrigation Schedule -->
                            <div class="ibox">
                                <div class="ibox-head">
                                    <div class="ibox-title">Irrigation Schedule</div>
                                    <div class="ibox-tools">
                                        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#scheduleModal">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="ibox-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover schedule-table" id="scheduleTable">
                                            <thead>
                                                <tr>
                                                    <th>Time</th>
                                                    <th>Duration</th>
                                                    <th>Days</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- Schedule rows will be dynamically added here -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>

                </div>
            </div>

            <style>
