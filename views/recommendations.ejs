            display: flex;
            align-items: center;
            gap: 6px;
            height: 60px;
            padding: 0 10px;
            box-sizing: border-box;
            justify-content: flex-start; 
        }

        .brand-icon {
            height: 36px;
        }

        .brand-text {
            height: 36px;
            transition: opacity 0.3s ease, width 0.3s ease;
        }

   
        body.sidebar-collapsed .brand-text {
            opacity: 0;
            width: 0;
            overflow: hidden;
        }

      
        body.sidebar-collapsed .page-brand {
            justify-content: center; 
            align-items: center;   
            margin-top: auto;       
            margin-bottom: auto;
            padding-top: 35px;
        }

        .dashboard-card {
            background: rgb(250, 250, 250);
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            transition: var(--transition);
            margin-bottom: 20px;
            overflow: hidden;
            border: none;
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
        }

        .dashboard-card .card-body {
            padding: var(--container-padding);
        }

        .page-sidebar .side-menu a.active {
            background: #02313d;    
            color: #a7e9d3;         
            font-weight: 600;
        }

        .page-sidebar .side-menu a.active i {
            color: #a7e9d3;           
        }

        .page-sidebar .side-menu a:hover {
            background: rgba(2, 49, 61, 0.12);
            color: #a7e9d3;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .page-sidebar .side-menu a:hover i {
            color: #a7e9d3;
        }

        .content-wrapper {
            margin-left: 250px;
        }

       .page-sidebar .side-menu a.separator {
            position: relative; 
            margin-top: 0;
            padding-top: 15px; 
        }

        .page-sidebar .side-menu a.separator::before {
            content: "";
            position: absolute;
            top: 0; 
            left: 50%;
            transform: translateX(-50%);
            width: 80%;
            height: 1px; 
            background-color: #485570;
            border-radius: 0;
        }
        .admin-block {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
            margin-top: 10px;
        }

        .admin-info {
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
            word-wrap: break-word;
            white-space: normal;
        }

        .admin-info .font-strong {
            font-weight: 600;
            font-size: 16px;
            line-height: 1.2;
        }

        
        body.sidebar-collapsed .page-sidebar .side-menu .nav-label {
            display: none;  
        }

        body.sidebar-collapsed .page-sidebar .side-menu i.sidebar-item-icon {
            margin-right: 0; 
        }


           /* --- footer --- */
        .page-footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 15px 0;
            background-color: #f5f5f5; 
        }

        .page-footer .font-13,
        .page-footer .to-top {
            margin: 5px 0;
        }
    </style>
</head>
