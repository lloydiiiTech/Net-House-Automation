                    <% recommendations.forEach((crop, index) => { %>
                        <div class="recommendation-card d-flex align-items-center"
                             onclick="showCropDetails(recommendationsData[<%= index %>])"
                             title="View Details">
                            <div class="crop-rank"><%= index + 1 %></div>
