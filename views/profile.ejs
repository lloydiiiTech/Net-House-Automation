.page-heading {
    padding: 12px 40px;
    display: flex;
    justify-content: space-between; /* left & right */
    align-items: center;
    background: linear-gradient(135deg, #21646be3, #273a42f8); /* green to blue gradient */
    border-radius: 15px;
    color: #fff;
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    width: 85%;
    margin: 20px auto;
    border: 1px solid rgba(255,255,255,0.3);
    font-family: 'Poppins', 'Segoe UI', Tahoma, sans-serif; /* clean modern font */
}

.page-title {
    font-size: 2rem;
    font-weight: 700; /* slightly lighter for better readability */
    margin: 0;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3), 0 0 4px rgba(255,255,255,0.2);
    color: #f5fffa; /* soft white with greenish tint */
    letter-spacing: 0.5px;
}

.home-icon {
    color: #f5fffa; /* soft, visible on gradient */
    font-size: 1.6rem;
    padding: 6px;
    border-radius: 50%;
    transition: transform 0.3s, color 0.3s, box-shadow 0.3s;
}

.home-icon:hover {
    transform: scale(1.25);
    color: #b9fbc0; /* fresh light green on hover */
    box-shadow: 0 0 12px rgba(185, 251, 192, 0.8); /* soft glowing effect */
}


/* Responsive adjustments */
@media (max-width: 768px) {
    .page-heading {
        flex-direction: column;
        gap: 10px;
        width: 90%;
        padding: 15px 20px;
    }

    .home-icon {
        align-self: flex-end;
    }

    .page-title {
        font-size: 1.7rem; /* slightly smaller on mobile */
    }
}
/* Container */
.profile-container {
    max-width: 80%;
    margin: 0 auto;
    padding: 20px;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
}

/* Wrapper: left + right */
.profile-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    border-radius: 20px;
    overflow: hidden;
    align-items: stretch; /* ensures both sides same height */
}

/* Left + Right flex setup */
.profile-left {
    flex: 1 1 300px; /* grow, shrink, base width */
    text-align: center;
    background: linear-gradient(135deg, #b0cfb1, #caddda);
    color: rgb(16, 58, 12);
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    border-radius: 20px;
}

.profile-right {
    flex: 2 1 350px; /* wider than left */
    display: flex;
    flex-direction: column;
    gap: 20px; /* spacing between cards */
}

/* Avatar with camera overlay */
.avatar-wrapper {
    position: relative;
    display: inline-block;
}

.profile-avatar {
    width: 220px;
    height: 220px;
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid rgba(255, 255, 255, 0.8);
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.6);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.profile-avatar:hover {
    transform: scale(1.08);
    box-shadow: 0 0 25px rgba(255, 255, 255, 0.8);
}

.camera-overlay {
    position: absolute;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,0.6);
    color: white;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
}

.camera-overlay:hover {
    background: rgba(0,0,0,0.8);
    transform: scale(1.15);
}

/* Name, Email, Role */
.profile-name {
    font-size: 2rem;
    font-weight: 700;
    margin-top: 20px;
    color: #3b8b5a;
}

.profile-email {
    font-size: 1.1rem;
    color: #f2f5f6;
    margin-top: 5px;
}

.profile-role {
    display: inline-block;
    margin-top: 15px;
    background: rgba(150, 182, 170, 0.288);
    color: #fffefc;
    padding: 8px 18px;
    border-radius: 25px;
    font-size: 0.95rem;
    font-weight: 600;
    backdrop-filter: blur(5px);
}

/* Buttons */
.mt-3 .btn {
    font-weight: 600;
    background: #88c0a0;
    border: none;
    color: white;
    transition: background 0.3s ease;
}

.mt-3 .btn:hover {
    background: #6fa888;
}

/* Profile card inside right panel */
.profile-card {
    background: #f9f9f9;
    border-radius: 15px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.06);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;

    display: flex;
    flex-direction: column;
    flex: 1; /* stretch to fill right panel */
}

.profile-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.12);
}

/* Card header */
.profile-card-header {
    background: linear-gradient(135deg, #04744060, #95cca5);
    color: #fffefc;
    padding: 18px 25px;
    font-weight: 600;
    font-size: 1.15rem;
    display: flex;
    align-items: center;
    gap: 8px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
}

/* Card body */
.profile-card-body {
    padding: 25px;
    flex: 1; /* stretch to fill card */
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

/* Info rows */
.info-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #e0e4e8;
    margin: 20px;
 
}

.info-row:last-child {
    border-bottom: none;
}

.info-label {
    font-weight: 600;
    color: #495057;
    padding: 0 10px; ;
}

.info-value {
    color: #6c757d;
    padding: 0 10px; ;
}

/* Status badges */
.status-badge {
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
}

.status-active {
    background: linear-gradient(135deg, #8fd19e, #6fbf73);
    color: #fffefc;
}

.status-deactivated {
    background: linear-gradient(135deg, #f28c8c, #e57373);
    color: #fffefc;
}

.verified-badge {
    background: linear-gradient(135deg, #8fd19e, #6fbf73);
    color: #fffefc;
}

.not-verified-badge {
    background: linear-gradient(135deg, #ffd17a, #f7b358);
    color: #fffefc;
}

/* Collapsible cards */
.collapsible-card {
    transition: all 0.3s ease;
    margin: 20px;
}

/* Responsive for mobile: stack vertically */
@media (max-width: 768px) {
    .profile-wrapper {
        flex-direction: column;
    }
    .profile-left, .profile-right {
        flex: 1 1 100%;
    }
    .profile-right {
