<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Password</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Oswald', sans-serif;
            font-weight: bold;
        }

        body {
            background-color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            width: 100vw;
        }

        .container {
            display: flex;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
        }

        .left-column {
            width: 40%;
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),url('images/Farm.jpg');
            background-size: cover; 
            background-position: center; 
            background-repeat: no-repeat; 
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-end;
            padding: 20px;
            color: white;
            text-align: right;
            border-right: 25px solid rgb(14, 70, 14);

        }

        .left-column a {
            color: rgb(255, 255, 255);
            text-decoration: none;
            font-size: 25px;
            margin: 10px 0;
            margin-right: -50px;
            padding-right: 50px;
            padding-left:50px;
            padding-top:20px;
            padding-bottom: 20px;
            font-family:Georgia, 'Times New Roman', Times, serif;
            -webkit-text-stroke: 1px rgb(129, 187, 122);
            text-shadow: 4px 4px 10px rgba(255, 255, 255, 0.473);
        }
        .left-column a:hover {
            color: rgb(254, 255, 254); /* Changes text color to white */
            -webkit-text-stroke: 1px rgb(129, 187, 122);
            text-shadow: 4px 4px 10px rgba(255, 255, 255, 0.473);
            
            border-top-left-radius: 50px;
            border-bottom-left-radius: 50px;
            padding-right: 40px;
}

        .left-column a.active {
            background: rgb(255, 255, 255);
            color: rgb(23, 97, 56); /* Changes text color to white */
            -webkit-text-stroke: 1px rgb(25, 85, 20); /* Darker border */
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); /* Adds slight shadow */
            border-top-left-radius: 50px;
            border-bottom-left-radius: 50px;
        }

        .left-content {
            position: absolute;
            top: 35%;
            left: 45px; 
            font-size: 55px;
            font-weight: bold;
            font-family: 'Georgia', serif;
            width: 480px;
            -webkit-text-stroke: 1px rgb(129, 187, 122);
            text-shadow: 4px 4px 10px rgba(99, 148, 113, 0.486);
        }

        
        .right-column {
            width: 60%;
            height: 100%;
            background-color: #ffffff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            margin-bottom: 30px;
            border-top: 25px solid rgb(14, 70, 14);
            border-right: 25px solid rgb(14, 70, 14);
            border-bottom: 25px solid rgb(14, 70, 14);
        }

        .logo {
            width: 150px;
            border-radius: 100%;
        }

        form {
            width: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        label {
            align-self: flex-start;
            font-weight: 800;
            font-size: 25px;
            margin-left: 70px;
            margin-right: 70px;
        }

        input[type="password"] {
            width: 70%;
            padding: 10px;
            margin-bottom: 20px;
            border: 2px solid #0c702d;
            border-radius: 10px;
            outline: none;
            text-align: center;
            font-size: 28px;
            font-weight: bold;

        }

        .submit-btn {
            background-color: #0c702d;
            color: white;
            padding: 15px;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-weight: 800;
            width: 100%;
            text-align: center;
            font-size: 18px;
            width: 60%;
            margin-top: 20px;
        }

        .submit-btn:hover {
            background-color: #094f20;
        }

        .message {
            margin-top: 10px;
            font-size: 16px;
            display: none;
            text-align: center;
        }

        .success {
            color: green;
        }

        .error {
            color: red;
        }
        .np h1{
            color:rgb(25, 77, 20);
            font-family: "elephant";
            font-size: 280%;
            font-weight: 800;
            padding: 50px

        }
        .np-box {
            width: 800px;
           height: 800px;
           padding-left: 100px;
           padding-right: 100px;
           padding-top: 50px;
           padding-bottom: 70px;
           background: #a4dab1c4;
           border-radius: 15px;
           box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
           text-align: center;
           border: 5px solid #0c702d;
           box-shadow: 0 0 15px rgba(0, 0, 0, 0.425);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-column">
            <div class="left-content">
                <h2>Demo Farm Net House Automation</h2>
            </div>
            <a href="#" class="active">New Password</a>
            <a href="/login">Back to Login</a>
        </div>
            <div class="right-column">
            <form id="passwordForm" class="np-box">
                
                    <img src="images/logo.png" alt="New Password" class="logo">
                    <div class="np">
                        <h1>Set New Password</h1>
                    </div>

                <label for="newPassword">New Password:</label>
                <input type="password" id="newPassword" name="newPassword" placeholder="Enter new password" required>
                
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" required>
                
                <button type="submit" class="submit-btn">RESET PASSWORD</button>

                <p class="message error" id="errorMessage">Passwords do not match.</p>
            <p class="message success" id="successMessage">Password changed successfully! Redirecting to login...</p>
            </form>
            
        </div>
    </div>

    <script>
        document.getElementById("passwordForm").addEventListener("submit", function(event) {
            event.preventDefault();
            
            const newPassword = document.getElementById("newPassword").value;
            const confirmPassword = document.getElementById("confirmPassword").value;
            const errorMessage = document.getElementById("errorMessage");
            const successMessage = document.getElementById("successMessage");
            
            if (newPassword !== confirmPassword) {
                errorMessage.style.display = "block";
                successMessage.style.display = "none";
            } else {
                errorMessage.style.display = "none";
                successMessage.style.display = "block";
                setTimeout(() => {
                    window.location.href = "/login";
                }, 3000);
            }
        });
    </script>
</body>
</html>
