                // Handle Firestore Timestamp
                if (crop.startDate._seconds) {
                    plantingDate = new Date(crop.startDate._seconds * 1000);
                } else if (crop.startDate.seconds) {
                    plantingDate = new Date(crop.startDate.seconds * 1000);
