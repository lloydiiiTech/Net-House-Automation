            }
            .crop-rank {
                width: 50px;
                height: 50px;
                font-size: 1.2rem;
            }
            .crop-name {
                font-size: 1.2rem;
            }
        }

        @media (max-width: 576px) {
            .summary-bar {
                padding: 1rem;
            }
            .recommendation-header, .recommendation-grid {
                padding: 1rem;
            }
            .modal-body {
                padding: 1rem;
            }
        }

