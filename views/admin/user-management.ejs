/* Each row is one card */
.table tbody tr {
    background: #fff; 
             /* rounded corners for the row */
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
}

.table tbody{
    border:2px solid black;            /* single background per row */
    border-radius: 30%;  
}

/* Hover effect */
.table tbody tr:hover {
    background-color: #f8f9fa;
    transform: scale(1.01);
}

/* Cells inside the row */
.table tbody td {
    border-top: none;             /* remove default cell border */
    vertical-align: middle;
    padding: 15px 12px;
    background: transparent;       /* cells themselves have no bg */
}

/* User info container stays aligned */
.user-info {
    display: flex;
    align-items: center;
    gap: 10px;
}

/* Status badges */
.status-badge {
    padding: 3px 8px;
    border-radius: 12px;
    font-size: 12px;
    color: #fff;
}

.badge-success { background: #28a745; }
.badge-warning { background: #ffc107; }
.badge-danger { background: #dc3545; }

/* Action buttons alignment */
.action-buttons {
    display: flex;
    justify-content: flex-end;
    gap: 5px;
}

/* Center horizontally and vertically */
.action-buttons {
    display: flex;
    justify-content: center; /* horizontal center */
    align-items: center;     /* vertical center */
}

.text-center {
    text-align: center;
    vertical-align: middle;
}

/* Mobile / small devices */
@media (max-width: 768px) {
    .table thead {
        display: none; /* hide header */
    }

    .table tbody tr {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 8px;
        padding: 12px;
        margin-bottom: 12px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    /* Row 1: User spans full width */
    .table tbody tr td:nth-child(1) {
        grid-column: span 2;
    }

    /* Row 2: Email | Role */
    .table tbody tr td:nth-child(2) { grid-column: 1 / 2; text-align: left; }
    .table tbody tr td:nth-child(3) { grid-column: 2 / 3; text-align: left; }

 /* Row 3: Email Verification | Status */
.table tbody tr td:nth-child(4) { 
    grid-column: 1 / 2; 
    text-align: left; 
}
    /* Row 4: Last Login spans full width */
    .table tbody tr td:nth-child(6) {
        grid-column: span 2;
        text-align: left;
    }

    /* Row 5: Actions spans full width and centered */
    .table tbody tr td:nth-child(7) {
        grid-column: span 2;
        display: flex;
        justify-content: center;
        gap: 12px; /* space between buttons */
        align-items: center;
        padding: 10px 0;
    }

    /* Adjust td padding for mobile */
    .table tbody td {
        padding: 6px 8px;
    }
}




